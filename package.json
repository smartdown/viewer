{
  "name": "smartdown-viewer",
  "version": "0.0.12",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "dupindex": "cp dist/index.html dist/404.html",
    "analyze": "npm run clean && BUILD=analyze node_modules/.bin/webpack --bail --progress --colors",
    "build": "npm run clean && BUILD=production node_modules/.bin/webpack -p --verbose --bail --progress --colors",
    "dev": "BUILD=development node_modules/.bin/webpack-dev-server --host 127.0.0.1 --port 4000 --devtool=source-map --progress --colors --content-base app",
    "devbuild": "npm run build && (cd dist && ln -s . viewer) && htp dist",
    "publish": "./publish.sh",
    "server": "node_modules/.bin/http-server --cors -c-1 dist/",
    "test": "export BUILD=test && karma start"
  },
  "author": "Daniel Keith <dan@quantumclay.com> (https://doctorbud.com)",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.7.5",
    "angular-resource": "^1.7.5",
    "bootstrap": "^4.1.3",
    "codemirror": "^5.41.0",
    "ng-file-upload": "^12.2.13",
    "smartdown-gallery": "0.0.20",
    "split.js": "^1.5.9",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-modules-umd": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-google": "^0.11.0",
    "eslint-plugin-html": "^5.0.0",
    "exports-loader": "^0.7.0",
    "expose-loader": "^0.7.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "font-awesome": "^4.7.0",
    "html-webpack-plugin": "^3.2.0",
    "imports-loader": "^0.8.0",
    "json-loader": "^0.5.7",
    "raw-loader": "^0.5.1",
    "smartdown": "0.0.100",
    "style-loader": "^0.23.1",
    "ui-bootstrap4": "^3.0.5",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
